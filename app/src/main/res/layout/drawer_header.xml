<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/drawer_img_width"
        android:layout_height="@dimen/drawer_img_height"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/cup_of_coffee" />

    <TextView
        android:id="@+id/listTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/drawer_list_title_padding"
        android:paddingBottom="@dimen/drawer_list_title_padding"
        android:textSize="@dimen/drawer_list_text_size"
        android:text="@string/app_name"
        android:textColor="@color/white" />

</LinearLayout>