<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/recipe_list_item_padding"
    android:paddingRight="@dimen/recipe_list_item_padding"
    android:paddingTop="@dimen/recipe_list_item_padding">

    <ImageView
        android:id="@+id/recImg"
        android:layout_width="@dimen/recipe_list_img_width"
        android:layout_height="@dimen/recipe_list_img_height"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/recImg"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:textStyle="bold"
                android:textSize="@dimen/recipe_list_name_size">
            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/recIng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_brown"
            android:textSize="@dimen/recipe_list_content_size"/>

        <TextView
            android:id="@+id/recSmr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title_color"
            android:textSize="@dimen/recipe_list_content_size"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator"
        android:layout_alignParentBottom="true" />
</RelativeLayout>